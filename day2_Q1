#include <iostream>
using namespace std;

//Compiler version g++ 6.3.0
class Array{
  int arr[100]={0},size,s=0;
  public:
    void accept();
    void get();
    void sum();
};
void Array::accept(){
  cout<<"Enter size of array : ";
  cin>>size;
  cout<<"Enter the sum : ";
  cin>>s;
  cout<<"Enter the elements of array : ";
  for(int j=0;j<size;j++)
    {
    
      cin>>arr[j];
     
    }
}

void Array::get(){
 
    for(int j=0;j<size;j++)
    {
     cout<< arr[j]<<" ";   
  }
}
void Array::sum(){
  int i=0,j=0,val=0;
  for( i=0;i<size;i++)
  {
    val=arr[i];
    for( j=i+1;j<size;j++)
    {
     val+=arr[j];
       if(s==val)
          break ;
          
    }
    if(s==val)
          break ;
  }
  cout<<"\nArray indices : "<<i<<" "<<j;
  
}
int main()
{
    
    Array obj;
    obj.accept();
    obj.get();
    obj.sum();
}
